<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.project2.model.BankAccount" table="BANK_ACCOUNT">
		<id name="accountId" column="ACCOUNT_ID">
			<generator class="increment"></generator>
		</id>
		<property name="amount" column="ACCOUNT_AMOUNT" type="org.hibernate.type.IntegerType"></property>
		<property name="type" column="ACCOUNT_TYPE" type="org.hibernate.type.StringType"></property>
		<property name="accountNumber" column="ACCOUNT_NUMBER" type="org.hibernate.type.IntegerType"></property>
		<many-to-one name="user" column="USER_ID" class="com.project2.model.User"></many-to-one>
	</class>
</hibernate-mapping>